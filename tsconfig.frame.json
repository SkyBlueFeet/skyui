{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmitOnError": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES6",
        "alwaysStrict": true,
        "importHelpers": true,
        "incremental": true,
        "sourceMap": false,
        "baseUrl": "./",
        "noEmit": true,
        "lib": ["ES2015", "ES2016", "ES2017"],
        "types": ["node", "webpack"]
    },
    "include": ["router", "script", "frame"],
    "exclude": ["node_modules", "dist", ".*"]
}
