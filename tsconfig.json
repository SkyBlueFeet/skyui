{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmitOnError": true,
        "declaration": false,
        "jsx": "preserve",
        "jsxFactory": "h",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "es5",
        "alwaysStrict": true,
        "incremental": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@example/*": ["example/*"],
            "@root/*": ["*"],
            "@declare/*": ["declare/*"]
        },
        "noEmit": false,
        "lib": ["ES2015", "DOM", "ES2016", "ES2017"],
        "types": ["node", "webpack", "webpack-env", "vue"]
    },
    "include": ["example", "docs", "declare"]
}
